@model GuildCars.UI.Models.EditUserViewModel
@{
    ViewBag.Title = "EditUser";
}

<h2>Edit User</h2>

@using (Html.BeginForm("EditUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>First Name</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Password</label>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" }) 
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>

    <div class="col-md-4">
        <div class="form-group">
            <label>Last Name</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group" style="width: 100px">
            <label>Roles</label>
            @Html.DropDownListFor(m => m.SelectedRole, Model.Roles, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            
        </div>
    </div>
</div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


